#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/bun@1.1.42/node_modules/bun/bin/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/bun@1.1.42/node_modules/bun/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/bun@1.1.42/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/bun@1.1.42/node_modules/bun/bin/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/bun@1.1.42/node_modules/bun/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/bun@1.1.42/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
"$basedir/../../bin/bun.exe"   "$@"
exit $?
