#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/ts-jest@29.2.5_@babel+core@7.26.0_@jest+transform@29.7.0_@jest+types@29.6.3_babel-jest@_6266a8433cfd8aa36c60b7094bbc9258/node_modules/ts-jest/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/ts-jest@29.2.5_@babel+core@7.26.0_@jest+transform@29.7.0_@jest+types@29.6.3_babel-jest@_6266a8433cfd8aa36c60b7094bbc9258/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/ts-jest@29.2.5_@babel+core@7.26.0_@jest+transform@29.7.0_@jest+types@29.6.3_babel-jest@_6266a8433cfd8aa36c60b7094bbc9258/node_modules/ts-jest/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/ts-jest@29.2.5_@babel+core@7.26.0_@jest+transform@29.7.0_@jest+types@29.6.3_babel-jest@_6266a8433cfd8aa36c60b7094bbc9258/node_modules:/home/ubuntu/my-media-stack/src/markdownify-mcp/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../cli.js" "$@"
else
  exec node  "$basedir/../../cli.js" "$@"
fi
